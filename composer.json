{
    "name": "boryszielonka/php-clock-mcp",
    "description": "PHP Clock MCP Server - Provides current date/time via MCP protocol",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.4",
        "symfony/ai-agent": "dev-main",
        "symfony/clock": "^7.0",
        "symfony/config": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/error-handler": "^7.0",
        "symfony/http-foundation": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/mcp-bundle": "dev-main",
        "symfony/mcp-sdk": "dev-main",
        "symfony/rate-limiter": "^7.0",
        "symfony/routing": "^7.0",
        "symfony/runtime": "^7.0",
        "symfony/security-bundle": "*",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "symfony/test-pack": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests --level 9",
        "cs-fix": "php-cs-fixer fix"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.0.*"
        }
    }
}
